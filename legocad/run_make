#!/bin/sh
#
#  Script:			run_make
#  Instance:		4
#  %version:		1 %
#  Description:		
#  %created_by:		famgr %
#  %date_created:	Tue Oct 15 17:36:26 1996 %

echo "Shell provvisoria per la compilazione ricorsiva"
if [ $# -eq 0 ]
then
        echo "inserire  flags tra apici"
else
OPTION=$1
echo "Sto per compilare"
echo "Flag usati: " $OPTION
cd ./lib/libicofile
