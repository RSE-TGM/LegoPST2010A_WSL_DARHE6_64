cd ../../legoserver
ccm make $OPTION -f Makefile.mk
cd ..
cd ./autodoc
ccm make $OPTION -f Makefile.mk
cd ..
cd ./bitmap
ccm make $OPTION -f Makefile.mk
cd ..
cd ./calcstaz
ccm make $OPTION -f Makefile.mk
cd ..
cd ./dati
ccm make $OPTION -f Makefile.mk
cd ..
cd ./edicole
ccm make $OPTION -f Makefile.mk
cd ..
cd ./editf01
ccm make $OPTION -f Makefile.mk
cd ..
cd ./filtri
ccm make $OPTION -f Makefile.mk
cd ..
cd ./iconvert
ccm make $OPTION -f Makefile.mk
cd ..
cd ./info
ccm make $OPTION -f Makefile.mk
cd ..

cd ./librarian
ccm make $OPTION -f Makefile.mk
cd ..
cd ./main
ccm make $OPTION -f Makefile.mk
cd ..
cd ./menugraf
ccm make $OPTION -f Makefile.mk
cd ..
cd ./tavole
ccm make $OPTION -f Makefile.mk
cd ..
cd ./topologia
ccm make $OPTION -f Makefile.mk
cd ..
cd ./topsim
ccm make $OPTION -f Makefile.mk
cd ..
cd ./know
ccm make $OPTION -f Makefile.mk
cd ..
cd ./utility
ccm make $OPTION -f Makefile.mk
cd ..
fi
